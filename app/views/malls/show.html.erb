<!-- Canvas -->
<div class="canvas">
  <!-- Sidebars -->
  <%= render "layouts/sidebar"%>
  <!-- Content -->
  <div class="content">
    <!-- Header -->
    <header class="navbar">
      <div class="navbar-inner">
        <!-- Left Icon -->
        <span id="toogle-sidebar" class="visible-phone pull-left">
          <i class="spicon spicon-nav"></i>
        </span>

        <!-- Right Icon -->
        <a href="modals/search.html" data-toggle="modal" data-target="#spotpunch-modal" class="pull-right">
          <i class="spicon spicon-search"></i>
        </a>

        <!-- Header Title -->
        <h1 class="navbar-title"><%= @mall.name %></h1>
      </div>
    </header>

    <!-- Container -->
    <div class="container">
      <div class="shop">
        <!-- Carousel -->
        <div class="carousel" data-plugin="carousel">
          <img src="/images/carousel/mall/carusel01.jpg" alt="carousel" />
          <img src="/images/carousel/mall/carusel02.jpg" alt="carousel" />
          <img src="/images/carousel/mall/carusel03.jpg" alt="carousel" />
          <img src="/images/carousel/mall/carusel04.jpg" alt="carousel" />
          <img src="/images/carousel/mall/carusel05.jpg" alt="carousel" />
          <img src="/images/carousel/mall/carusel06.jpg" alt="carousel" />
        </div>

        <!-- Tabs -->
        <div class="shop-tab">
          <div class="menu-title">
            <h3>SHOPS</h3>
          </div>
          <div class="menu-link">
            <ul class="tab" role="tablist">
              <li class="active" role="presentation">
                <a href="#mall-index" aria-controls="mall-index" role="tab" data-toggle="tab" data-title="SHOPS"><i class="spicon spicon-mall"></i></a>
              </li>
              <li role="presentation">
                <a href="#mall-news" aria-controls="mall-news" role="tab" data-toggle="tab" data-title="NEWS"><i class="spicon spicon-news"></i></a>
              </li>
              <li role="presentation">
                <a href="#mall-detail" aria-controls="mall-detail" role="tab" data-toggle="tab" data-title="DETAILS"><i class="spicon spicon-info"></i></a>
              </li>
            </ul>
          </div>
          <div class="menu-button" id="spot-button">
            <% if @is_user_following %>
              <%= render "malls/component/unfollow"%>
            <% else %>
              <%= render "malls/component/follow"%>
            <% end %>
            <!-- <a class="button" href="#spot"><i class="spicon spicon-plus"></i> SPOT</a> -->
          </div>
        </div>

        <div class="tab-content">
          <div role="tabpanel" class="tab-pane fade in active" id="mall-index">
            <div class="floor-tab">
              <ul class="tab" role="tablist">
                <% @standing_floors.each do |floor| %>
                  <li class="<%= 'active' if @standing_floors.first == floor %>" role="presentation"><a href="#<%= floor %>" aria-controls="<%= floor %>" role="tab" data-toggle="tab"><%= floor %></a></li>
                <% end %>
              </ul>
            </div>
            <div class="tab-content">
              <% @standing_floors.each do |floor| %>
                <div role="tabpanel" class="tab-pane fade in <%= 'active' if @standing_floors.first == floor %>" id="<%= floor %>">
                  <%= render partial: "list/stores_at_mall", locals: { floor:floor }%>
                </div>
              <% end %>
            </div>
          </div>
          <div role="tabpanel" class="tab-pane fade" id="mall-news">
            <ul class="listing">
              <li class="item">
                <div class="list">
                  <div class="list-content">
                    <h2 class="news-title">Build a Global Company</h2>
                    <div class="news-intro">
                      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer nec odio. Praesent libero. Sed cursus ante dapibus diam. Sed nisi. Nulla quis sem at nibha.</p>
                    </div>
                  </div>
                  <a href="#news-detail" class="list-nav"><i class="spicon spicon-arrow-right"></i></a>
                </div>
              </li>
              <li class="item">
                <div class="list">
                  <div class="list-content">
