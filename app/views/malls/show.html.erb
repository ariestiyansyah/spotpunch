            </ul>
            <div class="loadmore">
              <a href="#loadmore">LOADMORE</a>
            </div>
          </div>
          <div role="tabpanel" class="tab-pane fade" id="mall-detail">
            <div class="shop-content">
              <h3 class="title">Central Park</h3>
              <p>Mall Detail Here</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal Box -->
<div class="modal fade" id="spotpunch-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content"></div>
  </div>
</div>

