<li class="item">
  <div class="list">
    <div class="list-image">
      <%= link_to profile_path(permalink:activity.owner.username), class: "list-photo" do %>
          <img src="images/photo/photo02.jpg" alt="photo" />
          <span class="verify-icon"><i class="spicon spicon-check"></i></span>
      <% end %>
    </div>
    <div class="list-content">
      <div class="text1">
        <%= link_to activity.trackable.store.name, show_malls_path(name:activity.trackable.store.mall.permalink, permalink:activity.trackable.store.permalink) %>
      </div>
      <div class="text2">
        <%= link_to activity.trackable.product.name, products_show_malls_path(name:activity.trackable.store.mall.permalink, permalink:activity.trackable.store.permalink, product_id:activity.trackable.product) %>
      </div>
      <div class="text3">
        <%= link_to activity.trackable.store.mall.name, mall_path(activity.trackable.store.mall.permalink) %>
      </div>
    </div>
    <div class="list-nav list-flip">
      <div class="flip-container">
        <div class="flipper">
          <div class="front">
            <img src="images/product/product01.jpg" alt="product" />
          </div>
          <div class="back">
            <div class="list-action">
              <% if @current_user.liked? activity.trackable %>
                <%= render partial: "reviews/component/like", locals: { review:activity.trackable, id:activity.trackable.id }%>
              <% else %>
                <%= render partial: "reviews/component/dislike", locals: { review:activity.trackable, id:activity.trackable.id }%>
              <% end %>
              <a href="#comment"><i class="spicon spicon-comment"></i></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="list-comment spicon spicon-quote">
    <h4>
      <%= link_to display_name(activity.owner), "#comment" %>
    </h4>
    <p>
      <%= activity.trackable.content.html_safe %>
    </p>
  </div>
</li>