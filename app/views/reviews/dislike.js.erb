<% if params[:size] %>
  $("#like-review-<%= params[:id] %>").replaceWith( "<%= escape_javascript(render partial: 'reviews/component/dislike_with_size', locals: { review:@review, id:params[:id] }) %>" );
<% else %>
  $("#like-review-<%= params[:id] %>").replaceWith( "<%= escape_javascript(render partial: 'reviews/component/dislike', locals: { review:@review, id:params[:id] }) %>" );
<% end %>