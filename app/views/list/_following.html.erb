<li class="item" id="<%= following.class.name.downcase %>-<%= following.id %>">
  <div class="list">
    <div class="list-image">
      <a href="profile.html" class="list-photo small">
        <img src="images/photo/photo02.jpg" alt="logo" />
      </a>
    </div>
    <div class="list-content align-middle">
      <div class="text1">
        <% case following.class.name %>
        <% when "Brand" %>
          <a href="profile.html"><%= following.name %></a>
        <% when "Store" %>
          <a href="profile.html"><%= following.name %></a>
        <% when "User" %>
          <a href="profile.html"><%= following.username %></a>
        <% end %>
      </div>
      <div class="text4">
        <a href="profile.html">@takeshikaneshiro</a>
      </div>
    </div>
    <div class="list-button align-middle">
      <% case following.class.name %>
      <% when "Brand" %>
        <%= link_to unfollow_brands_path(following), method: :post, remote:true, data:{params:"profile=true"}, class: "button" do %>
          <i class="spicon spicon-plus"></i> SPOTTING
        <% end %>
      <% when "Store" %>
        <%= link_to unfollow_stores_path(following), method: :post, remote:true, data:{params:"profile=true"}, class: "button" do %>
          <i class="spicon spicon-plus"></i> SPOTTING
        <% end %>
      <% when "User" %>
        <%= link_to unfollow_users_path(following), method: :post, remote:true, data:{params:"profile=true"}, class: "button" do %>
          <i class="spicon spicon-plus"></i> SPOTTING
        <% end %>
      <% end %>
    </div>
  </div>
</li>